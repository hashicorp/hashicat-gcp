# [START vpc_auto_create]
resource "google_compute_network" "vpc_network" {
  project                 = var.project
  name                    = "gaurav-network"
  auto_create_subnetworks = true
  mtu                     = 1460
  subnets = [
  {
    subnet_name   = "gaurav-subnet"
    subnet_ip     = "10.100.10.0/24"
    subnet_region = var.region
  }
]
}
# [END vpc_auto_create]
